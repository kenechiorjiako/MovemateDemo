<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base text styles using Area font -->
    <style name="TextAppearance.LocallyGrown.Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/area_normal</item>
        <item name="fontFamily">@font/area_normal</item>
    </style>

    <style name="TextAppearance.LocallyGrown.RegularItalic" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/area_regular_italic</item>
        <item name="fontFamily">@font/area_regular_italic</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.LocallyGrown.Thin" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/area_thin</item>
        <item name="fontFamily">@font/area_thin</item>
    </style>

    <style name="TextAppearance.LocallyGrown.ThinItalic" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/area_thin_italic</item>
        <item name="fontFamily">@font/area_thin_italic</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.LocallyGrown.SemiBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/area_semibold</item>
        <item name="fontFamily">@font/area_semibold</item>
    </style>

    <style name="TextAppearance.LocallyGrown.SemiBoldItalic" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/area_semibold_italic</item>
        <item name="fontFamily">@font/area_semibold_italic</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.LocallyGrown.Bold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/area_bold</item>
        <item name="fontFamily">@font/area_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.LocallyGrown.BoldItalic" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/area_bold_italic</item>
        <item name="fontFamily">@font/area_bold_italic</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="TextAppearance.LocallyGrown.ExtraBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/area_extra_bold</item>
        <item name="fontFamily">@font/area_extra_bold</item>
    </style>

    <style name="TextAppearance.LocallyGrown.ExtraBoldItalic" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/area_extra_bold_italic</item>
        <item name="fontFamily">@font/area_extra_bold_italic</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.LocallyGrown.Black" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/area_black</item>
        <item name="fontFamily">@font/area_black</item>
    </style>

    <style name="TextAppearance.LocallyGrown.BlackItalic" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/area_black_italic</item>
        <item name="fontFamily">@font/area_black_italic</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Common text sizes with Area font -->
    <style name="TextAppearance.LocallyGrown.Headline1" parent="TextAppearance.LocallyGrown.Bold">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.LocallyGrown.Headline2" parent="TextAppearance.LocallyGrown.SemiBold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.LocallyGrown.Headline3" parent="TextAppearance.LocallyGrown.SemiBold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.LocallyGrown.Subtitle1" parent="TextAppearance.LocallyGrown.SemiBold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.LocallyGrown.Subtitle2" parent="TextAppearance.LocallyGrown.Regular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.LocallyGrown.Body1" parent="TextAppearance.LocallyGrown.Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.LocallyGrown.Body2" parent="TextAppearance.LocallyGrown.Regular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.LocallyGrown.Caption" parent="TextAppearance.LocallyGrown.Regular">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.LocallyGrown.Button" parent="TextAppearance.LocallyGrown.SemiBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources> 